# inventory/hosts

# Group of web servers
[webservers]
web1.example.com
web2.example.com

# Group of database servers
[dbservers]
db1.example.com

# Group of all servers
[all]
web1.example.com
web2.example.com
db1.example.com

# If you need to define specific variables for a group, you can do it like this:
[webservers:vars]
ansible_user=your_user
ansible_ssh_private_key_file=/path/to/your/private/key
